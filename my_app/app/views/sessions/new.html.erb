<!-- app/views/sessions/new.html.erb -->

<h2>Login</h2>

<%= form_with url: sign_in_path, method: :post, local: true do |form| %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Sign In" %>
  </div>
<% end %>

<p>
  New here? <%= link_to "Sign Up", sign_up_path %>
</p>
